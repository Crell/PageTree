{
    "name": "crell/pagetree",
    "homepage": "https://github.com/Crell/PageTree",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Larry Garfield",
            "email": "larry@garfieldtech.com",
            "homepage": "http://www.garfieldtech.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.4",
        "crell/path": "^0.1.2",
        "crell/fp": "^1.0",
        "crell/serde": "^1.5",
        "doctrine/dbal": "^4.3",
        "symfony/yaml": "^7.3",
        "latte/latte": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4.0",
        "phpbench/phpbench": "^1.4.1",
        "phpstan/phpstan": "^2.1.11",
        "mikey179/vfsstream": "^1.6",
        "yiisoft/db-sqlite": "^1.2",
        "yiisoft/cache-file": "^3.1"
    },
    "suggest": {
        "yiisoft/db-sqlite": "One cache implementation",
        "yiisoft/cache-file": "Needed for Yii DB"
    },
    "autoload": {
        "psr-4": {
            "Crell\\PageTree\\": "src"
        },
        "files": [
            "src/strings.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Crell\\PageTree\\": "tests",
            "Crell\\PageTree\\Benchmarks\\": "benchmarks"
        }
    },
    "scripts": {
        "benchmarks": "vendor/bin/phpbench run benchmarks --report=aggregate",
        "test": "phpunit",
        "phpstan": "phpstan",
        "coverage": "php -dextension=pcov.so -dpcov.enabled=1 -dpcov.directory=src vendor/bin/phpunit --coverage-text",
        "all-checks": [
            "phpunit",
            "phpstan"
        ]
    }
}
